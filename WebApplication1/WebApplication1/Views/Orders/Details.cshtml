@model WebApplication1.Models.Order

@{
    ViewBag.Title = "Details";
}

<h2>Detaily objednávky</h2>

<div>
    <table class="table">
        <tr>
            <th>
                Začátek rezervace
            </th>
            <th>
                Konec rezervace
            </th>
            <th>
                 Název hřiště
            </th>
        </tr>
    @foreach(var reservation in Model.Reservations)
    {
        <tr>
            <td>@reservation.Hour</td>
            <td>@reservation.EndHour</td>
            <td>@reservation.Place.Name</td>
        </tr>
    }
    </table>
</div>
<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |*@
    @Html.ActionLink("Zpět na objednávky", "Index")
</p>
